             x:Class="ListViewGrouping.PersonDetailPage"
             Title="{Binding LastName}">

  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Label Text="{Binding Fullname}"/>
    <Label Text="{Binding Description}"/>
  </StackLayout>

</ContentPage>